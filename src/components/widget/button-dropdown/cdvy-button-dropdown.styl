cdvy-button-dropdown .md-button.md-accent.md-raised.md-hue-2
  codenvy-border-radius(5px)
  box-shadow-simple()
  font-size 1em
  font-weight bold
  width auto
  line-height 30px
  height 30px
  padding-left 10px
  padding-right 7px
  margin 0
  webkit-transform none
  -moz-transform none
  -ms-transform none
  -o-transform none
  transform none

.cdvy-button-dropdown-separator
  border-left solid 1px $background-color
  margin-left 10px
  margin-right 10px

cdvy-button-dropdown .cdvy-button-dropdown-elements
  z-index 1
  left 0
  position absolute
  margin-top -10px
  margin-left 2px
  width 264px
  color $label-info-color

cdvy-button-dropdown .cdvy-button-dropdown-elements ul
  list-style none

cdvy-button-dropdown .cdvy-button-dropdown-elements ul li
  codenvy-border-radius(5px)
  background-color white
  display list-item

cdvy-button-dropdown .cdvy-button-dropdown-elements ul li:hover .cdvy-button-click-area
  background $hover-on-list-color

cdvy-button-dropdown .cdvy-button-dropdown-elements ul li:last-of-type .cdvy-button-click-area
  border none

cdvy-button-dropdown .cdvy-button-dropdown-elements ul li .cdvy-button-click-area
  codenvy-border-radius(5px)
  border-bottom hidden
  display block
  padding 10px
  text-transform uppercase
  text-decoration none
  color $label-info-color
  border-bottom 1px solid $default-border-color
  box-shadow inset 0 1px 0 rgba(255, 255, 255, 1)
  cursor pointer

cdvy-button-dropdown .cdvy-button-click-area,
cdvy-button-dropdown .cdvy-button-click-area:hover,
cdvy-button-dropdown .cdvy-button-click-area:focus
  color $background-color
  text-decoration none
  font-size 1em
  outline none
  line-height 36px

.cdvy-button-dropdown i
  display inline
  margin-right 10px

.cdvy-button-dropdown-icon
  color $background-color
  margin-left -2px
  margin-top -12px
  font-size 32px
  outline none

.cdvy-button-dropdown[disabled]
  background-color $default-border-color !important
  opacity 0.8

cdvy-button-dropdown:not(div:disabled) .md-button:hover
  codenvy-brightness(90%)
