.cdvy-toolbar
  flex-shrink 0

.cdvy-toolbar a
  text-decoration none

.cdvy-toolbar a:hover span
  text-decoration none

.cdvy-toolbar a,
.cdvy-toolbar md-icon,
.cdvy-toolbar .cdvy-toolbar-subheader,
.cdvy-toolbar .cdvy-toolbar-title-label
  color $white-color !important

.cdvy-toolbar md-toolbar
  min-height 70px

.cdvy-toolbar-breadcrumb
  white-space nowrap
  margin-top 0
  margin-left 10px
  font-size 1em

.cdvy-toolbar-breadcrumb a
  text-decoration none

.cdvy-toolbar-breadcrumb a:hover > span
  text-decoration underline

.cdvy-toolbar-breadcrumb .cdvy-toolbar-breadcrumb-title
  font-size 1em

.cdvy-toolbar-breadcrumb .icon-breadcrumb
  font-size 38px
  margin-top 0
  margin-left 2px

.cdvy-toolbar-header
  flex-wrap wrap

.cdvy-toolbar-title
  min-width fit-content
  white-space nowrap
  font-size 1.6em
  margin-left 23px

.cdvy-toolbar-title-icons
  margin-left 20px

.cdvy-toolbar-title-icons md-icon
  font-size 32px
  height 34px
  width 34px
  margin-right 10px

.cdvy-toolbar-button
  min-width fit-content
  font-size 14px
  margin-top -7px
  margin-bottom 10px
  margin-right 10px

.cdvy-toolbar-button cdvy-button-primary
  margin-left 15px

.cdvy-toolbar-subheader
  margin-left 24px
  margin-top -12px
  margin-bottom 12px

.cdvy-toolbar-subheader .cdvyfont
  margin-top 2px
  margin-right 5px

.toolbar-switch
  margin-left 9px
  background-color transparent
  border none
  color $background-color

.toolbar-switch md-icon
  vertical-align inherit
