.che-toolbar
  flex-shrink 0
  border-bottom 1px solid $list-separator-color

.che-toolbar a
  text-decoration none

.che-toolbar a:hover span
  text-decoration none

.che-toolbar a,
.che-toolbar md-icon,
.che-toolbar .che-toolbar-subheader,
.che-toolbar .che-toolbar-title-label
  color $default-dark-color !important

.che-toolbar md-toolbar
  min-height 70px

.che-toolbar-breadcrumb
  white-space nowrap
  margin-top 0
  font-size 0.9em

.che-toolbar-breadcrumb a
  text-decoration none

.che-toolbar-breadcrumb a:hover > span
  text-decoration underline

.che-toolbar-breadcrumb .che-toolbar-breadcrumb-title
  font-size 0.9em

.che-toolbar-breadcrumb .icon-breadcrumb
  font-size 20px
  margin-top 0
  margin-left 2px

.che-toolbar-header
  flex-wrap wrap

.che-toolbar-title
  min-width fit-content
  white-space nowrap
  font-size 1.2em
  margin-left 23px

.che-toolbar-title-icons
  margin-left 20px

.che-toolbar-title-icons md-icon
  font-size 32px
  height 34px
  width 34px
  margin-right 10px

.che-toolbar-subheader
  margin-left 24px
  margin-top -12px
  margin-bottom 12px

.che-toolbar-subheader .chefont
  margin-top 2px
  margin-right 5px

.che-toolbar-control-button
  font-size 1em
  min-width 40px
  margin-right 10px
  text-align center
  padding 0px 10px
  border 1px solid transparent

.che-toolbar-control-button:hover
  cursor pointer
  border 1px solid #a3c6f0
  che-border-radius(3px)


.che-toolbar-control-button md-icon
  vertical-align inherit
